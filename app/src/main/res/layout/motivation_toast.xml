<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:padding="30sp"
    android:id="@+id/motivation_toast_root"
    >
    <ImageView
        android:id="@+id/correct_toast_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_motivation"
        android:layout_marginEnd="5dp"
        android:layout_gravity="center"
        />
    <TextView
        android:id="@+id/correct_toast_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FAF90E"
        android:text="You are doing great! Keep it up!"
        android:textSize="25sp"
        android:paddingTop="4dp"
        />


</LinearLayout>