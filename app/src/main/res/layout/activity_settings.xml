<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingsActivity">

    <View
        android:id="@+id/background_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#262626"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <ImageButton
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:id="@+id/settings_image"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@drawable/icon_white_settings"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="  Daily reminders"
        android:textColor="@android:color/white"
        android:textSize="25dp"
        android:id="@+id/notifications_settings_text"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingTop="160dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="  Motivational messages"
        android:textColor="@android:color/white"
        android:textSize="25dp"
        android:id="@+id/motivations_settings_text"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/notifications_settings_text"
        android:paddingTop="32dp"
        />
    <Switch
        android:id="@+id/notification_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:paddingTop="169dp"
        />
    <Switch
        android:id="@+id/motivations_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/notification_switch"
        app:layout_constraintRight_toRightOf="parent"
        android:paddingTop="46dp"
        />
    <Button
        android:id="@+id/settings_menu_back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:paddingVertical="25dp"
        android:paddingHorizontal="25dp"
        android:backgroundTint="#000066"
        android:text="BACK"
        android:textSize="20dp"
        />
</androidx.constraintlayout.widget.ConstraintLayout>